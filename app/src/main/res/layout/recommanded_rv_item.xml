<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    android:elevation="@dimen/_4sdp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5sdp">


        <ImageView
            android:id="@+id/recommanded_rv_item_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/kaak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/_14sdp" />

        <TextView
            android:id="@+id/recommanded_rv_item_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alice"
            android:text="item name"
            android:textColor="#373b54"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/recommanded_rv_item_image"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/recommanded_rv_item_image"
            app:layout_constraintTop_toBottomOf="@id/recommanded_rv_item_image" />

        <ImageView
            android:id="@+id/recommanded_rv_item_plus_circle"
            android:layout_width="36dp"
            android:layout_height="27dp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/plus_circle"
            app:layout_constraintBottom_toBottomOf="@+id/recommanded_rv_item_price_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.627"
            app:layout_constraintTop_toTopOf="@+id/recommanded_rv_item_price_tv"
            app:layout_constraintVertical_bias=".6" />

        <TextView
            android:id="@+id/recommanded_rv_item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alice"
            android:text="JOD 0.0"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recommanded_rv_item_item_name_tv"
            app:layout_constraintEnd_toStartOf="@+id/recommanded_rv_item_plus_circle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/recommanded_rv_item_item_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/recommanded_rv_item_item_name_tv"
            app:layout_constraintVertical_bias="0.014" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
