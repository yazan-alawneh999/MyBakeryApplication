<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/leftMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:background="@drawable/message_row_bg"
        android:backgroundTint="@color/textColor"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/leftTextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            tools:text="hellow frind"
            android:padding="@dimen/_8sdp"
            android:layout_gravity="center_vertical"

            />

        <TextView
            android:id="@+id/leftTimeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            tools:text="00.00"

            android:textColor="@color/white"
            />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/rightMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:background="@drawable/message_row_bg"
        android:backgroundTint="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/rightTextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            tools:text="im fine frind "/>
        <TextView
            android:id="@+id/rightTimeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            tools:text="00.00"
            android:textColor="@color/white"
            />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>