<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:elevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9a7e69"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cat_rv_item_iv"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/boarder"
            android:scaleType="centerInside"
            android:src="@drawable/kaak" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            >

            <TextView
                android:id="@+id/cat_rv_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Name is here"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_5sdp"/>



                <TextView
                    android:id="@+id/cat_rv_item_description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alice"
                    android:text="Description is here "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:maxLines="1"

                    />


            <TextView
                android:id="@+id/cat_rv_item_Discount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/alice"
                android:text="Discount :"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category_rv_item_disCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:text="20% OFF"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_3sdp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>