<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.LoginTabFargment">

    <EditText
        android:drawableLeft="@drawable/baseline_person_pin_24"
        android:drawablePadding="@dimen/_8sdp"
        android:drawableTint="@color/colorPrimaryDark"
        android:id="@+id/login_fragment_email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3"
        app:layout_constraintWidth_percent=".8" />

    <EditText

        android:inputType="textPassword"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="@dimen/_8sdp"
        android:drawableTint="@color/colorPrimaryDark"
        android:id="@+id/login_fragment_pass_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/edittext_bg"
        android:hint="Pass"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_fragment_email_et"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent=".8" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/login_fragment_forgetPass_tv">
    <Button
        android:layout_gravity="center"
        android:id="@+id/login_fragment_log_btn"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        />
    <ProgressBar
        android:id="@+id/loginProgressbar"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
 />


</LinearLayout>

    <TextView
        android:id="@+id/login_fragment_forgetPass_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:text="Forget Password ? "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login_fragment_pass_et"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_fragment_pass_et"
        app:layout_constraintVertical_bias="0" />


</androidx.constraintlayout.widget.ConstraintLayout>